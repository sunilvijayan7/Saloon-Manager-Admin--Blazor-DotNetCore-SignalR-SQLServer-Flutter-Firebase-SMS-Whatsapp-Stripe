                                            <DxTextBox @bind-Text=@QuestionText></DxTextBox>
                                        </Template>
                                    </DxFormLayoutItem>
                                    <DxFormLayoutItem Caption="Question Name:" ColSpanMd="12">
                                        <Template>
                                            <DxTextBox @bind-Text=@QuestionName></DxTextBox>
                                        </Template>
                                    </DxFormLayoutItem>
                                </DxFormLayout>

                            </div>
                        </div>
                        @code{
                            string questionName;
                            string QuestionName { get => questionName; set { questionName = value;} }
