
@page "/analytics"
@inject HttpClient Http
@using DevExpress.Blazor
@using System.Threading


<DxTabs style="width:950px;padding:10px">
    <DxTabPage Text="Analytics">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card h-100">
                        <h1> Total Appointments</h1>
                        <DxFormLayout ItemSizeMode="SizeMode">
                            <DxFormLayoutItem Caption="Completed" ColSpanMd="6">
                                <Template>
                                    <DxTextBox @bind-Text="@Name"></DxTextBox>
                                </Template>
                            </DxFormLayoutItem>

                            <DxFormLayoutItem Caption="Not Completed" ColSpanMd="6">
                                <Template>
                                    <DxTextBox @bind-Text="@Email"></DxTextBox>
                                </Template>
                            </DxFormLayoutItem>

                            <DxFormLayoutItem Caption="Canceled" ColSpanMd="6">
                                <Template>
                                    <DxDateEdit @bind-Date="@BirthDate"></DxDateEdit>
                                </Template>
                            </DxFormLayoutItem>

                            <DxFormLayoutItem Caption="No Show" ColSpanMd="6">
                                <Template>
                                    <DxSpinEdit @bind-Value="@YearsWorked"></DxSpinEdit>
                                </Template>
                            </DxFormLayoutItem>
                        </DxFormLayout>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <h1> Staff Appointments</h1>
                        <DxFormLayout ItemSizeMode="SizeMode2">
                            <DxFormLayoutItem Caption="Contact Name:" ColSpanMd="6">
                                <Template>
                                    <DxTextBox @bind-Text="@Name2"></DxTextBox>
                                </Template>
                            </DxFormLayoutItem>

                            <DxFormLayoutItem Caption="Email:" ColSpanMd="6">
                                <Template>
                                    <DxTextBox @bind-Text="@Email2"></DxTextBox>
                                </Template>
                            </DxFormLayoutItem>

                            <DxFormLayoutItem Caption="Emsil" ColSpanMd="6">
                                <Template>
                                    <DxDateEdit @bind-Date="@BirthDate2"></DxDateEdit>
                                </Template>
                            </DxFormLayoutItem>

                            <DxFormLayoutItem Caption="Years Worked:" ColSpanMd="6">
                                <Template>
                                    <DxSpinEdit @bind-Value="@YearsWorked2"></DxSpinEdit>
                                </Template>
                            </DxFormLayoutItem>

                            <DxFormLayoutItem Caption="On Vacation:">
                                <Template>
                                    <DxCheckBox @bind-Checked="@OnVacation2"></DxCheckBox>
                                </Template>
                            </DxFormLayoutItem>
                        </DxFormLayout>


                    </div>
                </div>
            </div>
        </div>

        <div class="container" style="margin-top:20px">
            <div class="row">
                <div class="col">
                    <div class="card h-100">
                        <h1> Total Appointments</h1>
